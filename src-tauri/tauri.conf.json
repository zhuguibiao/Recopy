{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Recopy",
  "version": "0.3.0",
  "identifier": "com.recopy.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Recopy",
        "width": 880,
        "height": 380,
        "minHeight": 300,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "windowEffects": {
          "effects": ["hudWindow"],
          "state": "active",
          "radius": 12
        }
      },
      {
        "label": "hud",
        "url": "index.html?page=hud",
        "title": "",
        "width": 140,
        "height": 140,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "windowEffects": {
          "effects": ["hudWindow"],
          "state": "active",
          "radius": 20
        }
      },
      {
        "label": "preview",
        "url": "index.html?page=preview",
        "title": "",
        "width": 600,
        "height": 480,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "windowEffects": {
          "effects": ["hudWindow"],
          "state": "active",
          "radius": 16
        }
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' asset: http://asset.localhost; img-src 'self' asset: http://asset.localhost data: blob:; style-src 'self' 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/images/**", "**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Clipboard history manager",
    "longDescription": "Recopy is a free, open-source cross-platform clipboard history manager. It monitors your clipboard, stores text, images, rich text, and files, with full-text search, favorites, and groups.",
    "macOS": {
      "minimumSystemVersion": "12.0"
    },
    "windows": {
      "nsis": {
        "installMode": "both"
      }
    }
  }
}
